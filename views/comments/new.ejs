<%- include("../partials/header.ejs"); %>

<div id="main-content-containter" class="container">
    <h4>Comment on "<%= notice.petName; %>"</h4>
    <form method="POST" action="/notices/<%= notice._id %>/comments">
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputCommentAuthor">Author</label>
          <input
            type="text"
            class="form-control"
            id="inputCommentAuthor"
            placeholder="Name of the commenter"
            name="comment[author]"
          />
        </div>
      </div>
  
      <div class="form-row">
        <div class="form-group col-md-12">
          <label for="inputCommentBody">Comment Body</label>
          <textarea
            class="form-control"
            id="inputCommentBody"
            rows="4"
            placeholder="Add your message here. Accepts markup."
            name="comment[body]"
          ></textarea>
        </div>
      </div>

      <div style="width: 250px; display: block; margin: 0px auto;"><span><button style="display: inline;" type="submit" class="btn btn-lg btn-pet-submit">Submit</button></span>
      <span><a style="height: 100%;" href="/notices/<%= notice._id %> " class="btn btn-lg btn-danger">Cancel</a></span></div>

    </form>
  </div>

<%- include("../partials/footer.ejs"); %>
